// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "ssh_connections": [
    {
      "host": "coder.magenta-canid-87.main",
      "projects": [
        {
          "paths": ["~/config"]
        }
      ]
    }
  ],
  "assistant": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "path_search": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true,
          "web_search": true,
          "open": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "load_direnv": "shell_hook",
  "file_finder": {
    "modal_max_width": "xlarge"
  },
  "restore_on_startup": "none",
  "auto_signature_help": false,
  "show_signature_help_after_edits": false,
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },
  "slash_commands": {
    "docs": {
      "enabled": true
    },
    "project": {
      "enabled": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "tabs": {
    // Show git status colors in the editor tabs.
    "git_status": true,
    // Position of the close button on the editor tabs.
    "close_position": "right",
    // Whether to show the file icon for a tab.
    "file_icons": true,
    // What to do after closing the current tab.
    //
    // 1. Activate the tab that was open previously (default)
    //     "History"
    // 2. Activate the neighbour tab (prefers the right one, if present)
    //     "Neighbour"
    "activate_on_close": "history"
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": true,
    "edit_debounce_ms": 400,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": true,
      "shift": false,
      "alt": false,
      "platform": false,
      "function": false
    }
  },
  "languages": {
    "TypeScript": {
      "prettier": { "allowed": true },
      "language_servers": ["!eslint", "vtsls"]
    }
  },
  "lsp": {},
  "language_models": {
    "openai": {
      "api_url": "http://192.168.100.4:11434/v1",
      "version": "1",
      "low_speed_timeout_in_seconds": 120,
      "available_models": [
        {
          "provider": "openai",
          "name": "llama-3.2-3b-instruct",
          "max_tokens": 4096
        }
      ]
    },
    "google": {
      "available_models": [
        {
          "name": "gemini-2.0-flash-exp",
          "display_name": "Gemini 2.0 Flash (Exp)",
          "max_tokens": 1000000
        }
      ]
    }
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": false,
    "show_tab_bar_buttons": false
  },
  "buffer_font_features": {
    "calt": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "eager"
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "default_mode": "normal"
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "relative_line_numbers": true,
  "base_keymap": "VSCode",
  "ui_font_family": "SpaceMono Nerd Font",
  "buffer_font_family": "SpaceMono Nerd Font",
  "ui_font_weight": 500,
  "buffer_font_weight": 500,
  "buffer_line_height": {
    "custom": 1.7
  },
  "terminal": {
    "font_family": "Iosevka Nerd Font",
    "dock": "right"
  },
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "project_panel": {
    "folder_icons": true,
    "show": "always",
    "show_diagnostics": "all",
    "dock": "left"
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Dark",
    "dark": "Gruvbox Dark"
  },
  "show_background": true
}
